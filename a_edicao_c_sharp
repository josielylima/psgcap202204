            }
            else

            { if (situacaoFuncionario.ToLower() == "Nao")
                    Console.WriteLine("Mas pq vc gosta de trabalhar Aqui");
                respostasenao = Console.ReadLine();
                Console.WriteLine("Sua Resposta é" + respostasenao);----------coloca depois de criada string la ensima

               Console.ReadKey();

        public static void desafio_020()
        {
            Console.Write("Escreva uma Frase:");
            string frase = Console.ReadLine();
            string novaFrase = frase.Replace("A", "&").Replace("a", "&");
            Console.WriteLine(novaFrase);

        }           
        
               

